###############################################################################
#                           DISCORD CONFIGURATION                             #
###############################################################################

# Discord Bot Token (Message Content Intent required)
DISCORD_TOKEN=your_discord_bot_token_here

# The ID of the Discord channel where messages are harvested from
RELAY_CHANNEL_ID=your_channel_id_here

# Number of messages to fetch per API request
DISCORD_BATCH_SIZE=100

# How often to update the console progress during harvesting
DISCORD_PROGRESS_UPDATE_INTERVAL=1000

# Delay in seconds between Discord API calls to stay within rate limits
DISCORD_RATE_LIMIT_DELAY=0.75

# Previous history lookback for initial harvests or rebuilds
DAYS_LOOKBACK=365

###############################################################################
#                        WISE OLD MAN (WOM) API                              #
###############################################################################

# Your personal Wise Old Man API Key
WOM_API_KEY=your_wom_api_key_here

# Wise Old Man Group ID for the clan
WOM_GROUP_ID=your_group_id_here

# Wise Old Man Group Secret (required for triggering manual updates)
WOM_GROUP_SECRET=your_group_secret_here

# Base URL for the WOM API (v2) - FIXED: Use WOM_BASE_URL for consistency
WOM_BASE_URL=https://api.wiseoldman.net/v2

# Target Requests Per Minute for WOM API
WOM_TARGET_RPM=90

# Delay in seconds between WOM API calls
WOM_RATE_LIMIT_DELAY=0.67

# Maximum concurrent requests to the WOM API
WOM_MAX_CONCURRENT=10

# Max retries for failed API calls
WOM_MAX_RETRIES=3

# Staleness threshold: Skip players updated in the last X hours
WOM_STALENESS_SKIP_HOURS=12

# Boolean: Use shorter delay if an update was recently triggered
WOM_SHORT_UPDATE_DELAY=true

# Wait time in seconds after triggering an update
WOM_UPDATE_WAIT=10

# Test mode settings (usually false for production)
WOM_TEST_MODE=false
WOM_TEST_LIMIT=30
WOM_CACHE_TTL=300

###############################################################################
#                         AI & ANALYTICS SETTINGS                             #
###############################################################################

# Provider for LLM (1 = Gemini Flash Lite, 2 = Gemini Flash, 3 = Groq)
LLM_PROVIDER=1

# Google Gemini Configuration
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_API_KEY=your_gemini_api_key_here

# Groq Configuration (Fallback)
GROQ_MODEL=openai/gpt-oss-120b
GROQ_API_KEY=your_groq_api_key_here

# GitHub Token (Used for repository analytics/search if needed)
GITHUB_PERSONAL_TOKEN=your_github_token_here

# AI Insights: Number of top players to analyze for context
AI_PLAYER_LIMIT=200

# AI Insights: Activity window in days to consider for "recent" trends
AI_ACTIVITY_DAYS=7

# AI Insights: Limit for assets provided to LLM context
AI_ASSET_LIMIT=532

###############################################################################
#                    DASHBOARD & REPORTING PREFERENCES                        #
###############################################################################

# Date used as the start of the current reporting period
CUSTOM_START_DATE=2025-02-14

# Number of spots shown on the dashboard leaderboards
LEADERBOARD_SIZE=50

# Number of featured boss cards on the frontend
TOP_BOSS_CARDS=8

# Excel: Highlight 0 value cells to draw attention to inactivity
EXCEL_ZERO_HIGHLIGHT=true

# Excel formatting colors for highlight
EXCEL_ZERO_BG_COLOR=#FFC7CE
EXCEL_ZERO_FONT_COLOR=#9C0006
EXCEL_COLUMN_WIDTH=12

# Data pruning: Ignore members below these thresholds
PURGE_MIN_XP=0
PURGE_MIN_BOSS=0
PURGE_MIN_MSGS=0

###############################################################################
#                          PATHS & EXTERNAL IDS                               #
###############################################################################

# Google Drive folder ID for backup/export
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Local path where the spreadsheet/dashboard is mirrored for Drive sync
LOCAL_DRIVE_PATH=your_local_drive_path_here